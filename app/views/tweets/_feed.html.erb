<div class="column is-half">
  <article class="media box">
    <figure class="media-left">
      <p class="image is-64x64">
        <img src="https://i.pinimg.com/736x/e2/d5/80/e2d5801fc2023a613495a2f57435a6c4.jpg">
      </p>
    </figure>
    <div class="media-content">
      <%= render 'tweets/form'%>
    </div>
  </article>
  <% @tweets.each do | tweet | %>
    <div class="box">
      <article class="media">
        <div class="media-left">
          <figure class="image is-64x64">
            <img src="https://i.pinimg.com/736x/e2/d5/80/e2d5801fc2023a613495a2f57435a6c4.jpg">
          </figure>
        </div>
        <div class="media-content">
          <div class="content">
            <strong>NAME HERE</strong><br />
            <small>@user</small><br />
            <p><%= tweet.tweet %></p>
          </div>
          <nav class="level">
            <div class="level-left is-mobile">
              <%= link_to tweet, class: "level-item" do %>
                <span class="icon"><i class="fas fa-link" aria-hidden="true"></i></span>
              <% end %>
              <%= link_to edit_tweet_path(tweet), class: "" do %>
              <span class="icon"><i class="fas fa-edit" aria-hidden="true"></i></span>
              <% end %>
              <%= link_to tweet, method: :delete, data: { confirm: "Are you sure you want to delete this tweet?"
              } do %>
              <span class="icon"><i class="fas fa-trash-alt" aria-hidden="true"></i></span>
              <% end %>
            </div>
          </nav>
        </div>
      </article>
    </div>
  <% end %>
</div>
